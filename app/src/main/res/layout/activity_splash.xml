<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SplashActivity"
    android:background="?attr/card_bg_color"
    android:id="@+id/relativeLay">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/splash_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:src="@drawable/vb"
            android:transitionName="logo_image" />

        <TextView
            android:id="@+id/splash_text_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/splash_logo"
            android:fontFamily="@font/bungee"
            android:text="Aided Learning For VB.NET Programming Language"
            android:textAlignment="center"
            android:textColor="?attr/text_color"
            android:textSize="25sp"
            android:transitionName="logo_text" />

        <TextView
            android:id="@+id/splash_text_parish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/splash_text_header"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/antic"
            android:text="Develop by"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="?attr/text_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/splash_text_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/splash_text_parish"
            android:fontFamily="@font/antic"
            android:text="@string/developers_names"
            android:textAlignment="center"
            android:textColor="?attr/text_color"
            android:textSize="18sp"
            android:visibility="visible"
            tools:visibility="visible" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/splash_text_reg"
            android:layout_marginTop="40dp" />


    </LinearLayout>
</RelativeLayout>